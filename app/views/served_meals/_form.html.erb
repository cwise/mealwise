<%= simple_form_for @served_meal, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :served_at %>
  <%= f.association :meals, :collection => Meal.order('name').all, :as => :check_boxes %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                served_meals_path, :class => 'btn' %>
  </div>
<% end %>
